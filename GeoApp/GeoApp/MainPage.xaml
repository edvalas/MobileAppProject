<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GeoApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    x:Class="GeoApp.MainPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="txtBTitle" x:Uid="title" Text="" FontSize="40" 
                   HorizontalAlignment="Center" Margin="25,55,0,0"></TextBlock>
        
        <Image x:Name="globe" Source="Images/globe.png" Height="350" Width="345" HorizontalAlignment="Center" 
               VerticalAlignment="Center" Margin="5,184,10,107"></Image>
        
        <StackPanel x:Name="Sp" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25,0,0,15">
            <Button x:Name="navNewLocation" Width="125" x:Uid="newLocation" Content="" 
                    Click="navNewLocation_Click"></Button>
            <Button x:Name="navSavedLocations" Width="125" Margin="0,15,0,0" x:Uid="savedLocations" Content=""
                    Click="navSavedLocations_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
