<Page
    x:Class="GeoApp.NewLocation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GeoApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBlock x:ConnectionId='1' x:Name="tblStatusUpdates" Text="" HorizontalAlignment="Center"
                   VerticalAlignment="top" Margin="0, 10, 0, 0" />

        <TextBlock x:ConnectionId='2' x:Name="position" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,135,0,0" FontSize="26" Text=""></TextBlock>

        <TextBlock x:ConnectionId='3' x:Name="txtBLocation" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top"
                   Margin="40,205,0,0"/>

        <StackPanel x:ConnectionId='4' x:Name="mySP" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:ConnectionId='5' x:Name="getLocation" x:Uid="getLocation" Content=""
                    Margin="0,0,0,40" Height="45"                          ></Button>

            <Button x:ConnectionId='6' x:Name="saveLocation" x:Uid="saveLocation" Content=""
                    Margin="0,0,0,40" Height="45"                           ></Button>
        </StackPanel>
    </Grid>
</Page>

